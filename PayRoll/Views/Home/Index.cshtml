@{
    ViewBag.Title = "Home Page";
}
<div class="col-md-12 col-lg-12 col-sm-12" style="display:flex; justify-content:center; align-items:end">
    @if (Request.IsAuthenticated)
    {
        <h1>Welcome</h1>
        <ul>
            <li>@Html.ActionLink("List all companies", "ListAllCompanies")</li>
            <li>@Html.ActionLink("List All Employees", "ListAllEmployees")</li>
            <li>@Html.ActionLink("List South African Employees", "ListSouthAfricanEmployees")</li>
        </ul>
    }
    else
    {
<h1>Please @Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to begin</h1>
    }
</div>
